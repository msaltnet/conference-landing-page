{
  "name": "conference-landing-page",
  "version": "1.0.0",
  "description": "컨퍼런스 랜딩 페이지",
  "main": "index.html",
  "scripts": {
    "dev": "cross-env BASE_URL=http://127.0.0.1:3000/dist npm run build && live-server --port=3000 --open=/dist/index.html",
    "dev:watch": "npm run build && live-server --port=3000 --open=/dist/index.html --watch=dist,data",
    "build": "node build.js",
    "build:prod": "cross-env NODE_ENV=production node build.js",
    "validate": "node -e \"const { validateProgramData } = require('./js/validator.js'); const fs = require('fs'); const data = JSON.parse(fs.readFileSync('./data/program-schedule.json', 'utf8')); const result = validateProgramData(data); if (!result.isValid) { console.error('❌ 검증 실패:', result.errors.join('\\n')); process.exit(1); } else { console.log('✅ 데이터 검증 성공'); }\"",
    "preview": "live-server --port=8080 --open=/docs/index.html",
    "clean": "rimraf dist docs",
    "start": "npm run dev"
  },
  "keywords": [
    "conference",
    "landing-page",
    "countdown",
    "flip-clock",
    "javascript",
    "css"
  ],
  "author": "Conference Team",
  "license": "MIT",
  "devDependencies": {
    "clean-css": "5.3.3",
    "clean-css-cli": "^5.6.2",
    "cross-env": "10.0.0",
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.5",
    "terser": "^5.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/conference-landing-page.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/conference-landing-page/issues"
  },
  "homepage": "https://github.com/your-username/conference-landing-page#readme"
}
